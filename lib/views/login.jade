include comps/header.jade
div.container
 div.col-md-4.col.md-offset-4
  div.panel.panel-default
    div.panel-heading
      h3.panel-title
        strong Sign in
    div.panel-body
     form(role="form" action="/dologin" method="post")
      if(locals.loginError) 
       div.alert.alert-error Incorrect Credentials!
        button(class="close", data-dismiss="alert") x
      div.form-group
        label(for="email") Email
        input.form-control#email(name="email" type="email", placeholder="Enter Email")
      div.form-group
        label(for="password") Password
          a(href="/frgpwd")  (forgot password)
        input.form-control#password(name="password" type="password", placeholder="Enter Password")
      button.btn.btn-sm.bt-default(type="submit") Sign In

include comps/footer.jade
