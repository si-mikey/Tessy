#!/usr/bin/env bash 

# checks if nvm is install
if type nvm 2>/dev/null; then
  nvm use v0.10
else
  echo "Install NVM with node version v0.10.x "
fi

# checks arguments for env 
[[ $@ =~ 'prod' ]] && export SITE_MODE='prod' || export SITE_MODE='dev'

# temp session key
export SECRET_SESS_KEY=$RANDOM$RANDOM$RANDOM

node app.js



